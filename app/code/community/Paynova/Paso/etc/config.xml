<?xml version="1.0"?>
<config>
    <modules>
        <Paynova_Paso>
            <version>0.0.0.2</version>
        </Paynova_Paso>
    </modules>
    <global>
    	<sales>
    		<order>
    			<states>
					<new translate="label">
						<label>New</label>
						<statuses>
							<processing default="1"/>
						</statuses>
						<visible_on_front/>
					</new>
				</states>
    		</order>
    	</sales>	
        <models>
            <paso>
                <class>Paynova_Paso_Model</class>
            </paso>
        </models>
        <events>
            <checkout_type_onepage_save_order>
                <observers>
                    <paynova_paso>
                        <type>singleton</type>
                        <class>Paynova_Paso_Model_Observer</class>
                        <method>afterOrderSaveMethod</method>
                    </paynova_paso>
                </observers>
            </checkout_type_onepage_save_order>

            <sales_convert_quote_to_order>
                <observers>
                    <paynova_remove_GovId_from_quote>
                        <class>Paynova_Paso_Model_Observer</class>
                        <method>removeGovIdFromQuote</method>
                    </paynova_remove_GovId_from_quote>
                </observers>
            </sales_convert_quote_to_order>
            <sales_order_payment_capture>
                <observers>
                    <set_current_invoice_to_capture>
                        <type>singleton</type>
                        <class>Paynova_Paso_Model_Observer</class>
                        <method>setCurrentInvoiceToCapture</method>
                    </set_current_invoice_to_capture>
                </observers>
            </sales_order_payment_capture>
	    </events>
       <helpers>
            <paso>
                <class>Paynova_Paso_Helper</class>
            </paso>
        </helpers>
        <blocks>
            <paso><class>Paynova_paso_Block</class></paso>
        </blocks>
        <template>
            <email>
               <paso_activateemail>
                   <label>Paynova activate email</label>
                   <file>paso_activateemail.html</file>
                   <type>html</type>
               </paso_activateemail>
            </email>
        </template>
        <payment>
            <groups>
                <mpaso>paso</mpaso>
            </groups>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <paso_processing>/paso/processing</paso_processing>
        </secure_url>
        <routers>
            <paso>
                <use>standard</use>
                <args>
                    <module>Paynova_Paso</module>
                    <frontName>paso</frontName>
                </args>
            </paso>
        </routers>
        <translate>
            <modules>
                <Paynova_paso>
                    <files>
                        <default>Paynova_paso.csv</default>
                    </files>
                </Paynova_paso>
            </modules>
        </translate>
        <layout>
            <updates>
                <paso>
                    <file>paynova_paso.xml</file>
                </paso>
            </updates>
        </layout>
    </frontend>
    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <paso after="Mage_Adminhtml">Paynova_paso</paso>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
        <sales_order_payment_cancel>
            <observers>
                <paynova_paso>
                    <type>singleton</type>
                    <class>Paynova_Paso_Model_Observer</class>
                    <method>send_paynova_cancel</method>
                </paynova_paso>
            </observers>
        </sales_order_payment_cancel>
        </events>
        <translate>
            <modules>
                <Paynova_paso>
                    <files>
                        <default>Paynova_paso.csv</default>
                    </files>
                </Paynova_paso>
            </modules>
        </translate>
        <layout>
            <updates>
                <paso>
                    <file>paynova_paso.xml</file>
                </paso>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <paso translate="title" module="paso">
                                            <title>paso Settings</title>
                                        </paso>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
