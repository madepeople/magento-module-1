<layout version="0.1.0">
    <paso_processing_payment>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="paso/payment" name="paso_payment" template="paynova/paso/payment.phtml" />
        </reference>
    </paso_processing_payment>

    <paso_processing_placeform>
        <reference name="root">
            <action method="setTemplate"><template>paso/blank.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="paso/placeform" name="paso_placeform" template="paynova/paso/placeform.phtml" />
        </reference>
    </paso_processing_placeform>


    <checkout_onepage_index>
        <reference name="head">
            <action method="addJs"><script>paynova/paso/jquery-1.11.1.min.js</script></action>
            <action method="addJs"><script>paynova/paso/paso.js</script></action>
            <block type="page/html" name="pasohead_script" template="paynova/paso/pasohead.phtml" />
        </reference>
    </checkout_onepage_index>

    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addJs"><script>paynova/paso/jquery-1.11.1.min.js</script></action>
            <action method="addJs"><script>paynova/paso/paso.js</script></action>
            <block type="page/html" name="pasohead_script" template="paynova/paso/pasohead.phtml" />
        </reference>
    </onestepcheckout_index_index>

    <firecheckout_index_index>
        <reference name="head">
            <action method="addJs"><script>paynova/paso/jquery-1.11.1.min.js</script></action>
            <action method="addJs"><script>paynova/paso/paso.js</script></action>
            <block type="page/html" name="pasohead_script" template="paynova/paso/pasohead.phtml" />
        </reference>
    </firecheckout_index_index>
</layout>
